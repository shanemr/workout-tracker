<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headerStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userInfoText">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="home_page_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:backgroundTint">#5AB33B</item>
        <item name="android:fontFamily">@font/archivo_black</item>
    </style>

    <style name="home_menu_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">350dp</item>
        <item name="android:contentDescription">@string/menu_home</item>
    </style>

    <style name="icon_description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">#322A2A</item>
    </style>

    <style name="icon_description_text_final" parent="icon_description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="workout_page_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#CC1662</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>